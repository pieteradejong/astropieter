---
import HeaderLink from './HeaderLink.astro';
import { Image } from 'astro:assets';
import profileImage from '../assets/pieter-de-jong-300.png';

// Get current page URL to determine which label to show
const currentPath = Astro.url.pathname;

let currentSection = 'Home'; // default
if (currentPath.startsWith('/blog')) {
	currentSection = 'Blog';
} else if (currentPath.startsWith('/about')) {
	currentSection = 'About';
} else if (currentPath.startsWith('/projects')) {
	currentSection = 'Projects';
} else if (currentPath.startsWith('/reading')) {
	currentSection = 'Reading';
} else if (currentPath.startsWith('/contact')) {
	currentSection = 'Contact';
}
---

<header style="width: 100%;">
	<div class="content-container">
		<nav>
			<div class="mobile-header-left">
				<a href="/" class="mobile-profile-link">
					<div class="mobile-profile">
						<Image 
							src={profileImage}
							alt="Pieter de Jong" 
							class="profile-image"
							width={40}
							height={40}
						/>
					</div>
				</a>
				<span class="mobile-profile-name">Pieter de Jong</span>
				<span class="mobile-section-label">{currentSection}</span>
			</div>
			<button class="nav-toggle" id="hamburgerBtn" aria-label="Open menu" aria-expanded="false" aria-controls="mainNav">
				<span class="hamburger-icon">☰</span>
			</button>
			<div class="nav-menu" id="mainNav">
				<HeaderLink href="/">Home</HeaderLink>
				<HeaderLink href="/blog">Blog</HeaderLink>
				<HeaderLink href="/about">About</HeaderLink>
				<HeaderLink href="/projects">Projects</HeaderLink>
				<!-- <HeaderLink href="/software">Software</HeaderLink> -->
				<HeaderLink href="/reading">Reading and Lyrics</HeaderLink>
				<HeaderLink href="/contact">Contact</HeaderLink>
			</div>
		</nav>
	</div>
</header>

<script>
// Simple vanilla JS hamburger menu toggle
if (typeof window !== 'undefined') {
  window.addEventListener('DOMContentLoaded', () => {
    const btn = document.getElementById('hamburgerBtn');
    const nav = document.getElementById('mainNav');
    if (!btn || !nav) return;
    
    // Function to close the menu
    const closeMenu = () => {
      btn.setAttribute('aria-expanded', 'false');
      nav.classList.remove('open');
    };
    
    // Toggle menu on button click
    btn.addEventListener('click', (e) => {
      e.stopPropagation(); // Prevent event bubbling
      const expanded = btn.getAttribute('aria-expanded') === 'true';
      btn.setAttribute('aria-expanded', String(!expanded));
      nav.classList.toggle('open', !expanded);
    });
    
    // Close menu when clicking outside
    document.addEventListener('click', (e) => {
      const isMenuOpen = nav.classList.contains('open');
      const target = e.target as Node;
      if (isMenuOpen && target && !nav.contains(target) && !btn.contains(target)) {
        closeMenu();
      }
    });
    
    // Close menu when a link is clicked (for SPA feel)
    nav.querySelectorAll('a').forEach(link => {
      link.addEventListener('click', () => {
        closeMenu();
      });
    });
    
    // Close menu on escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && nav.classList.contains('open')) {
        closeMenu();
      }
    });
  });
}
</script>

<style>
/* Mobile Header Layout */
.mobile-header-left {
	display: none;
}

.mobile-profile-link {
	display: inline-block;
	text-decoration: none;
	border-radius: 50%;
	transition: transform 0.2s ease;
}

.mobile-profile-link:hover {
	transform: scale(1.05);
}

.mobile-profile {
	display: inline-block;
}

.profile-image {
	width: 40px;
	height: 40px;
	border-radius: 50%;
	object-fit: cover;
	border: 2px solid var(--border);
}

.mobile-profile-name {
	font-size: 1.1rem;
	font-weight: 600;
	color: var(--primary-text);
	display: none;
}

.mobile-section-label {
	font-size: 1rem;
	font-weight: 600;
	color: var(--non-link-text);
	display: none;
	padding: 0.375rem 0.75rem;
	border: 1px solid var(--border);
	border-radius: 0.5rem;
	background-color: var(--footer-bg);
	box-shadow: 0 1px 3px rgba(34, 34, 34, 0.06);
}

/* Mobile (< 768px): Hamburger menu */
@media (max-width: 767px) {
	.content-container nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding: 0 var(--spacing-unit);
	}

	.mobile-header-left {
		display: flex;
		align-items: center;
		gap: 0.75rem;
	}

	.mobile-profile-name {
		display: inline-block;
	}

	.mobile-section-label {
		display: inline-block;
	}
}

/* Mobile (< 768px): Hamburger menu */
.nav-toggle {
	display: block;
	background: none;
	border: none;
	font-size: 2rem;
	padding: 0.5em;
	min-width: 44px;
	min-height: 44px;
	cursor: pointer;
}
.nav-menu {
	display: none;
	flex-direction: column;
	align-items: center;
	gap: 0.5rem;
	position: absolute;
	top: 3.5rem;
	left: 0;
	right: 0;
	background: var(--card-bg);
	box-shadow: 0 2px 8px rgba(0,0,0,0.08);
	padding: 1.5rem 0;
	z-index: 1000;
}
.nav-menu.open {
	display: flex;
}

/* Tablet+ (≥ 768px): Horizontal nav */
@media (min-width: 768px) {
	.nav-toggle {
		display: none;
	}
	.nav-menu {
		display: flex;
		flex-direction: row;
		align-items: center;
		justify-content: center;
		position: static;
		background: none;
		box-shadow: none;
		padding: 0;
		gap: 1rem;
		width: 100%;
	}
	.mobile-profile-name {
		display: none;
	}
}
.hamburger-icon {
	display: block;
	line-height: 1;
}

/* Bottom border for nav links on hover/active */
.nav-menu a {
	border-bottom: 2px solid transparent;
	transition: border-color 0.2s;
	padding-bottom: 0.25em;
	background: none;
	text-decoration: none;
}
.nav-menu a:hover,
.nav-menu a.active {
	border-bottom: 2px solid var(--accent);
	background: none;
	text-decoration: none;
}
.nav-menu a:active,
.nav-menu a:focus {
	background: none;
	color: var(--accent);
	outline: none;
	border-bottom: 2px solid var(--accent);
}
</style>
