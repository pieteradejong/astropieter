---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// these go to meta tags
const { title = 'Default page title', description = 'Default page description' } = Astro.props;
---
<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
        <style>
			.title {
				margin: 0 0 16px;
				padding: 1em 0;
				text-align: center;
				line-height: 1;
			}
            .title h1 {
				margin: 0 0 0.5em 0;
				margin: 0;
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<div class="title">
                <h1>{title}</h1>
            </div>
			<hr />
            <slot />
		</main>
		<Footer />
	</body>
</html>
