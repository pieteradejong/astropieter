---
import Layout from '../layouts/Default.astro';
---

<Layout
	title="Contact"
	description="Contact me"
>
<main>
  <div class="intro-text">
    <p>
      I'd love to hear from you, especially if you're a fellow Software Engineer or mathematician, 
      or if you share an interest in these topics: skiing, snowboarding, geopolitics, physical fitness, 
      linguistics, and spiritual growth.
    </p>
  </div>

  <form id="contactForm" class="contact-form" onsubmit="submitForm(event)" novalidate>
    <fieldset>
      <legend>Send me a message</legend>
      
      <div class="form-group">
        <label for="name" id="name-label">Name</label>
        <input 
          type="text" 
          id="name" 
          name="name" 
          aria-labelledby="name-label"
          required 
          minlength="2"
          placeholder="Your name"
        >
      </div>

      <div class="form-group">
        <label for="email" id="email-label">Email</label>
        <input 
          type="email" 
          id="email" 
          name="email" 
          aria-labelledby="email-label"
          required
          placeholder="your.email@example.com"
        >
      </div>

      <div class="form-group">
        <label for="subject" id="subject-label">Subject</label>
        <input 
          type="text" 
          id="subject" 
          name="subject" 
          aria-labelledby="subject-label"
          required
          minlength="3"
          placeholder="What is this about?"
        >
      </div>

      <div class="form-group">
        <label for="message" id="message-label">Message</label>
        <textarea 
          id="message" 
          name="message" 
          aria-labelledby="message-label"
          required
          minlength="10"
          rows="6"
          placeholder="Your message here..."
        ></textarea>
      </div>

      <div class="form-group">
        <button type="submit">Send Message</button>
      </div>
    </fieldset>
  </form>
</main>

<script>
  function submitForm(event: SubmitEvent) {
    event.preventDefault();
    
    const form = event.target as HTMLFormElement;
    const formData = new FormData(form);
    
    // Type-safe form data access
    const name = formData.get('name') as string;
    const email = formData.get('email') as string;
    const subject = formData.get('subject') as string;
    const message = formData.get('message') as string;

    console.log("Form Submitted");
    console.log(`Name: ${name}`);
    console.log(`Email: ${email}`);
    console.log(`Subject: ${subject}`);
    console.log(`Message: ${message}`);

    // You can add more logic here to handle the form submission
  }
</script>

<style>
  .intro-text {
    max-width: 600px;
    margin: 2rem auto;
    padding: 0 2rem;
    color: var(--primary-text);
    font-size: 1.1rem;
    line-height: 1.6;
  }

  .contact-form {
    max-width: 600px;
    margin: 2rem auto;
    padding: 2rem;
  }

  fieldset {
    border: 1px solid var(--border);
    border-radius: 8px;
    padding: 2rem;
  }

  legend {
    font-size: 1.5rem;
    font-weight: bold;
    padding: 0 1rem;
    color: var(--primary-text);
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  label {
    display: block;
    margin-bottom: 0.5rem;
    color: var(--primary-text);
    font-weight: 500;
  }

  input,
  textarea {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid var(--border);
    border-radius: 4px;
    font-size: 1rem;
    transition: border-color 0.2s;
  }

  input:focus,
  textarea:focus {
    outline: none;
    border-color: var(--accent);
    box-shadow: 0 0 0 2px rgba(42, 127, 165, 0.1);
  }

  button {
    background: var(--accent);
    color: white;
    border: none;
    padding: 0.75rem 1.5rem;
    border-radius: 4px;
    font-size: 1rem;
    cursor: pointer;
    transition: background-color 0.2s;
  }

  button:hover {
    background: var(--accent-hover);
  }

  /* Error states - only show after interaction */
  input:not(:placeholder-shown):invalid,
  textarea:not(:placeholder-shown):invalid {
    border-color: #dc2626;
  }

  /* Remove red border on focus if invalid */
  input:focus:invalid,
  textarea:focus:invalid {
    border-color: var(--accent);
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .contact-form {
      padding: 1rem;
    }

    fieldset {
      padding: 1.5rem;
    }
  }
</style>
</Layout>
