---
import Layout from '../../layouts/Default.astro';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const allPosts = await getCollection('blog');

// Filter out draft posts in production, but show them in development
const posts = allPosts
	.filter((post) => {
		// In development, show all posts
		if (import.meta.env.DEV) {
			return true;
		}
		// In production, only show published posts
		return !post.data.draft;
	})
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<Layout
	title=""
	description="Blog posts by Pieter de Jong"
>
	<div class="content-container">
		<div class="blog-intro">
			<!-- <h1>Blog Posts</h1> -->
			<p>
				Thoughts on software engineering, mathematics, and other topics that interest me.
			</p>
		</div>

		<div class="grid-container">
			{posts.map((post) => (
				<article class="blog-card">
					<a href={`/blog/${post.slug}/`} class="blog-card-content">
						<div class="blog-header">
							<h2 class="blog-title">{post.data.title}</h2>
							{post.data.draft && (
								<span class="draft-badge">DRAFT</span>
							)}
						</div>
						<p class="blog-date">
							<FormattedDate date={post.data.pubDate} />
						</p>
						{post.data.description && (
							<p class="blog-description">{post.data.description}</p>
						)}
						<div class="blog-tags">
							{post.data.tags.map((tag) => (
								<span class="blog-tag">{tag}</span>
							))}
						</div>
					</a>
				</article>
			))}
		</div>
	</div>
</Layout>

<style>
	.blog-section {
		margin: 2rem 0;
	}

	.blog-grid {
		display: none;
	}

	.blog-card {
		display: block;
		text-decoration: none;
		color: inherit;
		background: var(--card-bg);
		border: 1px solid var(--border);
		border-radius: 8px;
		transition: transform 0.2s, box-shadow 0.2s;
	}

	.blog-card:hover {
		transform: translateY(-1px);
		box-shadow: 0 2px 4px rgba(var(--gray), 15%);
	}

	.blog-card-content {
		padding: 1.5rem;
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
	}

	.blog-title {
		margin: 0;
		font-size: 1.3rem;
		color: var(--non-link-text);
		line-height: 1.3;
	}

	.blog-date {
		margin: 0;
		font-size: 0.9rem;
		color: var(--secondary-text);
	}

	.blog-description {
		margin: 0;
		font-size: 0.95rem;
		color: var(--secondary-text);
		line-height: 1.5;
	}

	.blog-tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
		margin-top: 0.5rem;
	}

	.blog-tag {
		font-size: 0.8rem;
		padding: 0.2rem 0.6rem;
		background: var(--footer-bg);
		color: var(--secondary-text);
		border-radius: 4px;
	}

	.blog-header {
		display: flex;
		align-items: center;
		gap: 0.75rem;
	}

	.draft-badge {
		font-size: 0.7rem;
		padding: 0.2rem 0.5rem;
		background: var(--warning-bg, #fff3cd);
		color: var(--warning-text, #856404);
		border-radius: 4px;
		font-weight: bold;
		border: 1px solid var(--warning-border, #ffeaa7);
	}

	@media (max-width: var(--mobile-cutoff)) {
		.blog-card-content {
			padding: 1.25rem;
		}

		.blog-title {
			font-size: 1.2rem;
		}
	}
</style>
